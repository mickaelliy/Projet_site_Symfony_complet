{% extends '::layout/layoutAdmin.html.twig' %}

{% block body %}
    <h1>Catégories</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td><a href="{{ path('adminCategories_show', { 'id': category.id }) }}">{{ category.id }}</a></td>
                <td>{{ category.name }}</td>
                <td>
                    <a href="{{ path('adminCategories_show', { 'id': category.id }) }}"><i class="far fa-eye"></i></a>
                    <a href="{{ path('adminCategories_edit', { 'id': category.id }) }}"><i class="fas fa-pencil-alt"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('adminCategories_new') }}">Créer une nouvelle catégorie</a>
        </li>
    </ul>
{% endblock %}
