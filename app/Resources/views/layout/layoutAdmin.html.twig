  </head>

  <body>

    <div id="header" class="jumbotron text-center">
        <div>
            <h1> ADMIN </h1>
            <p>
                Vous êtes sur l'espace d'administration du site
            </p>
        </div>

        <div id="mySidenav" class="sidenav">
            <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;Fermer</a>
            <a href="{{ path('adminProduct_index') }}">Produits</a>
            <a href="{{ path('adminCategories_index') }}">Catégories</a>
            <a href="{{ path('adminUsers_index') }}">Clients</a>
            <a href="{{ path('adminCommandes_index') }}">Commandes</a>
            <a href="{{ path('adminPages_index') }}">Pages</a>
        </div>
        <div id="main">
            <span style="font-size:30px;cursor:pointer" onclick="openNav()">&#9776; Menu</span>
        </div>
    </div>

    

    <div class="container">
        <div class="row">
            {# <div id="menu" class="col-md-3 menu">
                {#TEST INCLUDE barre de navigation#}
                {# include '::modulesUsed/navigationAdmin.html.twig' }
            </div> #}

            <div id="content" class="col-md-12">
                {% block body %}
                {% endblock %}
            </div>
        </div>
    </div>
        
        <hr/>
{################################# Footer ###############################}
	<footer id="footer" class="vspace20">
		<div class="container">
			<div class="row">
				<div class="col-md-4 text-center">
					<h4>Informations</h4>
					<ul class="nav nav-stacked">
                        {{ render(controller("MickwebPagesBundle:Pages:menu")) }}
					</ul>
				</div> 

				<div class="col-md-4 text-center">
					<h4>Notre entrepôt</h4>
					<p><i class="icon-map-marker"></i>&nbsp;Paris 75 000 - 3 rue des jardins</p>
				</div>

				<div class="col-md-4 text-center">
					<h4>Nous contacter</h4>
					<p><i class="icon-phone"></i>&nbsp;Tel: 02 35 00 00 00</p>
					<p><i class="icon-print"></i>&nbsp;Fax: 02 35 00 00 00</p>
				</div>
			</div>

			<div class="row">
				<div class="col-md-12">
                    <p class="text-center">&copy;Créateur du site {{ webmaster }} {{ 'now'|date('Y') }} </p>
				</div>
			</div>
		</div>
	</footer>	    

