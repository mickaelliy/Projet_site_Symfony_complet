{% extends '::layout/layoutAdmin.html.twig' %}

{% block body %}
    <h1>Product</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ product.titre }}</td>
            </tr>
            <tr>
                <th>Auteur</th>
                <td>{{ product.auteur }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>
                    {% if product.image %}
                    {# <img src="{{ product.image.url }}" alt="{{ product.image.alt }}"> #}
                    <img
                        src="{{ asset(product.image.webPath) }}"
                        alt="{{ product.image.alt }}"
                        width="300" 
                        height="250"
                    />
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Published</th>
                <td>{% if product.published %}adminProduct{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Disponible</th>
                <td>{% if product.disponible %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Prix HT</th>
                <td>{{ product.prix }}</td>
            </tr>
            <tr>
                <th>TVA</th>
                <td>{{ product.tva.valeur }} %</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('adminProduct_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('adminProduct_edit', { 'id': product.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
