{% extends "MickwebEcommerceBundle::layout.html.twig" %}

{% block title %}
  Fiche produit - {{ parent() }}
{% endblock %}

{% block MickwebEcommerce_body %}

<div class="container col-md-12">
	<div class="row">

		{% for flashMessage in app.session.flashbag.get('success') %}
			<div class="alert alert-success">
				{{ flashMessage }}
			</div>
		{% endfor %}
					
		<h1> Bienvenue sur la page de contact </h1>
		<div class="col-md-6">
			<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2625.271656953916!2d2.4011593152452635!3d48.85302997928704!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47e67278f86e2fb5%3A0xcab144bf83eb445e!2s5+Rue+de+la+R%C3%A9union%2C+75020+Paris!5e0!3m2!1sfr!2sfr!4v1551385044027" width="470" height="320" frameborder="0" style="border:0" allowfullscreen></iframe>
		</div>
		<div class="col-md-6">
			<div id="contactForm" class="mt-4">
				{{ form_start(form) }}
				<div class="row">
					<div class="col-sm-4"> {{ form_row(form.firstname) }} </div>
					<div class="col-sm-4"> {{ form_row(form.lastname) }} </div>
				</div>
				<div class="row">
					<div class="col-sm-4"> {{ form_row(form.phone) }} </div>
					<div class="col-sm-4"> {{ form_row(form.email) }} </div>
				</div>
				{{form_rest(form)}}
				<div class="form-group">
					<button class="btn recherche">Envoyer</button>
				</div>
		
				{{ form_end(form) }}
			</div>
		</div>
			
	</div>
</div>

{% endblock %}