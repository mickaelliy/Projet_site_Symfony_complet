{# src/Mickweb/EcommerceBundle/Resources/views/Advert/supprimer.html.twig #}


{% extends "MickwebEcommerceBundle::layout.html.twig" %}

{% block title %}
    Supprimer un produit - {{ parent() }}
{% endblock %}

{% block MickwebEcommerce_body %}

  <h2>Supprimer un Produit</h2>

  <p> 
    Etes-vous certains de vouloir supprimer l'annonce "{{ product.titre }}" ?
  </p>

  {# l'id de l'annonce est dans la route de l'action du formulaire #}
  <form action="{{ path('mickweb_ecommerce_supprimer', {'id': product.id}) }}" method="post">
    <a href="{{ path('mickweb_ecommerce_fiche_produit', {'id': product.id}) }}" class="btn btn-default">
      <i class="glyphicon glyphicon-chevron-left"></i>
          Retour à la liste
    </a>
    {# bouton de soumission #}
    <input type="submit" value="Supprimer" class="btn btn-danger" />
    {# génération du champ CSRF #}
    {{ form_rest(form) }}
  </form>

