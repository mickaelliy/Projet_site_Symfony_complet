{% extends '::layout/layoutAdmin.html.twig' %}

{% block body %}
    <h1>Liste des clients</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        
        <tbody>
        {% for user in utilisateurs %}
            <tr>
                {# <td><a href="{{ path('adminProduct_show', { 'id': product.id }) }}">{{ product.id }}</a></td> #}
                <td>{{ user.username }}</td>
                <td>
                    {# Si l'utilisateur n'a pas d'adresse, on affiche rien #}
                    {% if user.adresses|length != 0 %}
                     <a href="{{ path('adminAdressesUsers', { 'id': user.id }) }}" title="consulter les adresses"><i class="far fa-eye"></i></a>
                    {% else %}
                     <p>Aucune adresse pour ce client</p>
                    {% endif %}

                    {# Si l'utilisateur n'a pas command√©, on n'affiche pas de factures #}
                    {% if user.commande|length != 0 %}
                     <a href="{{ path('adminFacturesUsers', { 'id': user.id }) }}" title="consulter les factures"><i class="far fa-eye"></i></a>
                    {% else %}
                     <p>Aucune facture pour ce client</p>
                    {% endif %} 
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
